{
    "name": "journal-blog-edition",
    "description": "A Ghost theme based of the Journal theme.",
    "version": "1.0.0",
    "private": true,
    "engines": {
        "ghost": ">=5.0.0"
    },
    "license": "MIT",
    "author": {
        "name": "Sam Smith",
        "email": "sam@keyring.email",
        "url": "https://samsmith.me"
    },
    "contributors": [
        {
            "name": "Ghost Foundation",
            "email": "hello@ghost.org",
            "url": "https://ghost.org"
        }
    ],
    "keywords": [
        "ghost",
        "theme",
        "ghost-theme"
    ],
    "docs": "https://github.com/samsmithcodes/GhostTheme-Journal",
    "config": {
        "posts_per_page": 10,
        "image_sizes": {
            "xs": {
                "width": 150
            },
            "s": {
                "width": 300
            },
            "m": {
                "width": 720
            },
            "l": {
                "width": 960
            },
            "xl": {
                "width": 1200
            },
            "xxl": {
                "width": 2000
            }
        },
        "card_assets": true,
        "custom": {
            "navigation_layout": {
                "type": "select",
                "options": ["Logo on the left", "Logo in the middle", "Stacked"],
                "default": "Stacked"
            },
            "matomo_enabled": {
                "description": "Global switch for enabling Matomo.",
                "type": "boolean",
                "default": false
            },
            "matomo_url": {
                "type": "text",
                "default": "https://matomo.example.com/"
            },
            "matomo_site_id": {
                "type": "text",
                "default": "1"
            }
        }
    },
    "scripts": {
        "dev": "gulp",
        "test": "gscan .",
        "zip": "gulp zip"
    },
    "devDependencies": {
        "@tryghost/shared-theme-assets": "2.5.0",
        "autoprefixer": "10.4.21",
        "beeper": "2.1.0",
        "cssnano": "7.1.0",
        "gscan": "5.0.0",
        "gulp": "5.0.1",
        "gulp-concat": "2.6.1",
        "gulp-livereload": "4.0.2",
        "gulp-postcss": "10.0.0",
        "gulp-uglify": "3.0.2",
        "gulp-zip": "5.1.0",
        "ordered-read-streams": "2.0.0",
        "postcss": "8.5.6",
        "postcss-easy-import": "4.0.0",
        "pump": "3.0.3"
    }
}
